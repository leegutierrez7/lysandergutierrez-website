# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# (Legacy GA variable removed; Vercel Analytics works out-of-the-box)

# Newsletter Integration (ConvertKit)
CONVERTKIT_API_KEY=
CONVERTKIT_FORM_ID=

# Email Service (Resend)
RESEND_API_KEY=

# Contact Form
CONTACT_EMAIL=contact@example.com

# Performance Monitoring (no explicit env needed for Vercel Analytics)

# Error Reporting (Optional)
SENTRY_DSN=

# Database (Optional - if using database features)
DATABASE_URL=

# Authentication (Optional - if implementing auth)
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Social Media (Optional - for metadata)
NEXT_PUBLIC_TWITTER_HANDLE=
NEXT_PUBLIC_LINKEDIN_URL=
NEXT_PUBLIC_GITHUB_URL=

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_SEARCH=true

# Feature Flags
# Enable blog (set to 'true' to enable blog pages, else they 404)
NEXT_PUBLIC_FEATURE_BLOG=true
